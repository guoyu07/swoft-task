{
  "name": "swoft/task",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "swoft",
    "task",
    "routine"
  ],
  "description": "microservice framework base on swoole",
  "license": "apache2.0",
  "require": {
    "swoft/framework": "dev-component"
  },
  "autoload": {
    "psr-4": {
      "Swoft\\Task\\": "src/"
    },
    "files": [
      "src/Helper/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Swoft\\Task\\Test\\": "test"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/swoft-cloud/framework"
    },
    {
      "type": "composer",
      "url": "https://packagist.phpcomposer.com"
    }
  ],
  "require-dev": {
    "eaglewu/swoole-ide-helper": "dev-master",
    "phpunit/phpunit": "^5.7"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml"
  }
}
